@model ProductModel

<div class="container">
    <div class="col-md-12">
        <table class="table table-striped table-specification">
            <tbody>
                @foreach (var specification in Model.Specifications)
                {
                    <tr>
                        <td class="table-specification-title">@specification.Key</td>
                        <td>@Html.Raw(specification.Value)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
